<div class="row">
  <div class="col m6 offset-m3">

    <h3 align="center">Event Categories</h3>

    <% if user_signed_in? and current_user.admin? %>
      <div align="center">
        <%= link_to "Create Category", new_category_path, class: "waves-effect waves-light btn" %>
      </div>
    <% end %>
    <br />

    <% @categories.each do |category | %>
      <div class="card text-center">
        <div class="card-content">
          <span class="card-title"><%= category.name %></span><br />
          <br />
          <div>
            <%= pluralize(Event.where(:category_id => category.id).count, "event")%><br />
            <br />
          </div>
          <div class="card-action">
            <%= link_to "View", category_path(category.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
