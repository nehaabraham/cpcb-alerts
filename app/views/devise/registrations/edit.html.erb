<h2 align="center">Edit <%= resource_name.to_s.humanize %></h2>

<div class="row">
  <div class="col m8 offset-m2">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <i>If you would like to leave a field as is, do not change it</i>
      <br />
      <br />

      <div class="row">
        <div class="input-field col m6">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="input-field col m6">
          <%= f.check_box :subscribed_to_email %>
          <%= f.label :subscribed_to_email, "Email Notifications" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="row">
        <div class="input-field col m6">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
        </div>

        <div class="input-field col m6">
          <%= f.check_box :subscribed_to_sms %>
          <%= f.label :subscribed_to_sms, "SMS Notifications" %>
        </div>
      </div>

      <div class="row input-field">
        <label>Subscribed Lists</label><br />
        <br />
        <%= f.check_box :cpcb_seminars %>
        <%= f.label :cpcb_seminars, "CPCB Seminars" %>
        <%= f.check_box :csb_seminars %>
        <%= f.label :csb_seminars, "CSB Seminars" %>
        <%= f.check_box :faculty_meetings %>
        <%= f.label :faculty_meetings, "Faculty Meetings" %>
        <%= f.check_box :miscellaneous %>
        <%= f.label :miscellaneous, "Miscellaneous" %>
      </div>
      <br />
      
      <div class="input-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="input-field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn waves-effect waves-light" %>
      </div>
    <% end %>
    <br />
    <h3 align="center">Cancel my account</h3>

    <div align="center">
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn red lighten-1"%></p>
    </div>

    <%= link_to "Back", :back %>

  </div>
</div>
